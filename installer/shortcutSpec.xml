<shortcuts>
    <programGroup defaultName="Doc Char Converter" location="applications/startMenu"/>
    <shortcut iconFile="$INSTALL_PATH\DocCharConvert16.ico" name="Doc Char Convert" 
              description="Converts between different character encodings." 
              workingDirectory="$INSTALL_PATH" target="$INSTALL_PATH\DocCharConvert.jar" 
              programGroup="yes" desktop="yes"/>
    <shortcut iconFile="$INSTALL_PATH\DocCharConvert16.ico" name="Doc Char Convert (Test Mode)" 
              description="Converts between different character encodings (shows console)." 
              initialState="noShow"
              workingDirectory="$INSTALL_PATH" target="$INSTALL_PATH\DocCharConvert.bat" 
              programGroup="yes" desktop="no"/>
    <shortcut iconFile="$INSTALL_PATH\UninstallDCC16.ico" name="Uninstall Language Test" 
              description="Uninstall DocCharConvert" 
              workingDirectory="$INSTALL_PATH" target="$INSTALL_PATH\Uninstaller\uninstaller.jar" 
              programGroup="yes" desktop="no"/>
</shortcuts>
